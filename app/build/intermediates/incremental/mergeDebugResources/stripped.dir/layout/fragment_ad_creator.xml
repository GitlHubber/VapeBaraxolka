<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adCreatorFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other_logic.ad_creator.AdCreator">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/adCreatorToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Добавьте фотографии"
                    android:textColor="@color/colorText"
                    android:textSize="20dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/adPhoto1"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/ad_creator_main_photo_dark_theme"
                            android:cropToPadding="true"
                            android:padding="5dp"
                            android:scaleType="centerCrop" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:paddingEnd="5dp"
                                android:layout_marginStart="20dp"
                                android:background="@drawable/for_ads_date_time">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/ad_creator_main_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:visibility="gone"
                                    android:text="Главное"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorAdsDate"/>

                            </LinearLayout>

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/adPhoto2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:cropToPadding="true"
                            android:padding="4dp"
                            android:scaleType="centerCrop"
                            android:src="@color/colorAdCreatorImage" />

                        <ImageView
                            android:id="@+id/adPhoto3"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:cropToPadding="true"
                            android:padding="4dp"
                            android:scaleType="centerCrop"
                            android:src="@color/colorAdCreatorImage" />

                        <ImageView
                            android:id="@+id/adPhoto4"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:cropToPadding="true"
                            android:padding="4dp"
                            android:scaleType="centerCrop"
                            android:src="@color/colorAdCreatorImage" />

                        <ImageView
                            android:id="@+id/adPhoto5"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:cropToPadding="true"
                            android:padding="4dp"
                            android:scaleType="centerCrop"
                            android:src="@color/colorAdCreatorImage" />

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/uploadPhotoCounterAdCreator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="end|center"
                        android:text="Загружено 0 из 5"
                        android:textColor="@color/colorText" />

                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/titleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:counterTextColor="@color/colorText"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Заголовок"
                        android:inputType="textCapSentences"
                        android:textColor="@color/colorText"
                        android:textColorHighlight="@color/colorText"
                        android:textColorLink="@color/colorText"
                        android:textCursorDrawable="@color/colorText"
                        android:paddingLeft="5dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Выберите категорию"
                    android:textColor="@color/colorText"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/categorySpinner"
                    style="@style/Widget.AppCompat.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/gradient_spinner"
                    android:dropDownWidth="300dp"
                    android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                    android:entries="@array/Spinner_category_items"
                    android:paddingRight="14dp"
                    android:popupBackground="@color/colorBackground"
                    android:popupElevation="3dp"
                    android:stateListAnimator="@drawable/spinner_sla"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/subcategoryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Выберите подкатегорию"
                        android:textColor="@color/colorText"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/subcategorySpinner"
                        style="@style/Widget.AppCompat.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/gradient_spinner"
                        android:dropDownWidth="300dp"
                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                        android:paddingRight="14dp"
                        android:popupBackground="@color/colorBackground"
                        android:popupElevation="3dp"
                        android:stateListAnimator="@drawable/spinner_sla"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorAdCreatorImage" />

<!--                <TextView-->
<!--                    android:id="@+id/tv2"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="10dp"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:text="Состояние товара:"-->
<!--                    android:textColor="@color/colorText"-->
<!--                    android:textSize="20dp" />-->

<!--                <androidx.appcompat.widget.AppCompatRadioButton-->
<!--                    android:id="@+id/newState"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="10dp"-->
<!--                    android:buttonTint="@color/colorText"-->
<!--                    android:text="Новое"-->
<!--                    android:textColor="@color/colorText"-->
<!--                    android:textColorLink="@color/colorText" />-->

<!--                <androidx.appcompat.widget.AppCompatRadioButton-->
<!--                    android:id="@+id/secondaryState"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="10dp"-->
<!--                    android:buttonTint="@color/colorText"-->
<!--                    android:text="Б/У"-->
<!--                    android:textColor="@color/colorText"-->
<!--                    android:textColorLink="@color/colorText" />-->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/descriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:counterTextColor="@color/colorText"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Описание"
                        android:textColor="@color/colorText"
                        android:inputType="textCapSentences"
                        android:textColorHighlight="@color/colorText"
                        android:textColorLink="@color/colorText"
                        android:textCursorDrawable="@color/colorText"
                        android:paddingLeft="5dp"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/priceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:counterTextColor="@color/colorText"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Стоимость"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorText"
                        android:textColorHighlight="@color/colorText"
                        android:textColorLink="@color/colorText"
                        android:textCursorDrawable="@color/colorText"
                        android:inputType="numberDecimal"
                        android:textSize="20sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addAdButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/gradient_for_signin_for_input"
                    android:text="Создать объявление"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textColor="@color/colorAdsDate" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="После создания, объявление попадает на модерацию"
                    android:textColor="@color/colorText"
                    android:gravity="center"
                    android:textSize="12dp" />

            </LinearLayout>
        </ScrollView>

    </com.google.android.material.appbar.AppBarLayout>

</FrameLayout>