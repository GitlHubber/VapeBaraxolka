<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="ragalik.baraxolka.view.ui.fragment.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_adsFragment"
            app:destination="@id/ADS"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/ADS"
        android:name="ragalik.baraxolka.view.ui.fragment.AdsFragment"
        android:label="@string/ads"
        tools:layout="@layout/fragment_ads"/>
    <fragment
        android:id="@+id/MY_ADS"
        android:name="ragalik.baraxolka.view.ui.fragment.MyAdsFragment"
        android:label="fragment_my_ads"
        tools:layout="@layout/fragment_my_ads" />
    <fragment
        android:id="@+id/signIn"
        android:name="ragalik.baraxolka.view.ui.fragment.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />
    <fragment
        android:id="@+id/FAVOURITES"
        android:name="ragalik.baraxolka.view.ui.fragment.FavouritesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" />
    <fragment
        android:id="@+id/logIn"
        android:name="ragalik.baraxolka.view.ui.fragment.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" />
    <activity
        android:id="@+id/adCreatorActivity"
        android:name="ragalik.baraxolka.view.ui.activity.AdCreatorActivity"
        android:label="activity_ad_creator"
        tools:layout="@layout/activity_ad_creator" />
    <fragment
        android:id="@+id/MODERATOR"
        android:name="ragalik.baraxolka.view.ui.fragment.AdModeratorFragment"
        android:label="fragment_ad_moderator"
        tools:layout="@layout/fragment_ad_moderator" />
    <fragment
        android:id="@+id/Technical_SUPPORT"
        android:name="ragalik.baraxolka.view.ui.fragment.TechnicalSupportFragment"
        android:label="fragment_technical_support"
        tools:layout="@layout/fragment_technical_support" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="ragalik.baraxolka.view.ui.fragment.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_fullImageLayout"
            app:destination="@id/fullImageLayout" />
        <action
            android:id="@+id/action_accountFragment_to_editAccountFragment"
            app:destination="@id/editAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/fullImageLayout"
        android:name="ragalik.baraxolka.view.ui.image_menu.FullImageLayout"
        android:label="fragment_full_image_layout"
        tools:layout="@layout/fragment_full_image_layout" >
        <argument
            android:name="position"
            app:argType="integer" />
        <argument
            android:name="urls"
            app:argType="java.util.ArrayList" />
    </fragment>
    <fragment
        android:id="@+id/editAccountFragment"
        android:name="ragalik.baraxolka.view.ui.fragment.EditAccountFragment"
        android:label="fragment_edit_account"
        tools:layout="@layout/fragment_edit_account" >
        <argument
            android:name="edit_flag"
            app:argType="string" />
        <action
            android:id="@+id/action_editAccountFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
    </fragment>
    <fragment
        android:id="@+id/myReportsFragment"
        android:name="ragalik.baraxolka.view.ui.fragment.MyReportsFragment"
        android:label="fragment_my_reports"
        tools:layout="@layout/fragment_my_reports" />
    <activity
        android:id="@+id/fullAdActivity"
        android:name="ragalik.baraxolka.view.ui.activity.FullAdActivity"
        android:label="activity_full_ad"
        tools:layout="@layout/activity_full_ad" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="ragalik.baraxolka.view.ui.fragment.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />


</navigation>
