<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adCreatorMenuLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:layout_gravity="bottom">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать фото"
        android:layout_margin="10dp"
        android:textColor="@color/colorText"
        android:textSize="24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ad_creator_show_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_see_photo"
        android:layout_marginStart="10dp"
        android:background="@color/colorBackground"
        android:text="Посмотреть фото"
        android:gravity="start|center"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ad_creator_take_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_add_photo"
        android:background="@color/colorBackground"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Сделать снимок"
        android:layout_marginStart="10dp"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:gravity="start|center"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ad_creator_load_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_get_image"
        android:background="@color/colorBackground"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_marginStart="10dp"
        android:text="Загрузить из галереи"
        android:textAllCaps="false"
        android:gravity="start|center"
        android:textColor="@color/colorText"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ad_creator_delete_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_remove_photo"
        android:background="@color/colorBackground"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:layout_marginStart="10dp"
        android:gravity="start|center"
        android:text="Удалить фото"
        android:textColor="#f00"
        android:textSize="20dp" />

</LinearLayout>