<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other_logic.main_fragments.RULES">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/rulesToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Header"
                    android:layout_width="match_parent"
                    android:layout_height="178dp"
                    android:gravity="center"
                    android:lineSpacingExtra="8sp"
                    android:text="CRITICAL RULES"
                    android:textColor="@color/colorText"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title1R"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-You MUST be polite"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/title2R"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="-Don't use mat"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/title3R"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-16+"
                    android:textColor="@color/colorText"
                    android:textSize="30sp" />
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.appbar.AppBarLayout>

</FrameLayout>