<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.ui.fragment.dialog_fragment.SortDialogFragment"
    android:background="@color/colorBackground"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите вид сортировки"
        android:textColor="@color/colorText"
        android:textSize="22sp"
        android:layout_margin="20dp"/>

    <RadioButton
        android:id="@+id/byPriceUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="По цене (дешевые - дорогие)"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:paddingEnd="20dp"
        android:buttonTint="@color/colorText"
        android:textColorLink="@color/colorText"/>

    <RadioButton
        android:id="@+id/byPriceDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="По цене (дорогие - дешевые)"
        android:textSize="18sp"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:paddingEnd="20dp"
        android:buttonTint="@color/colorText"
        android:textColorLink="@color/colorText"/>

    <RadioButton
        android:id="@+id/byDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="По дате"
        android:textSize="18sp"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:paddingEnd="20dp"
        android:buttonTint="@color/colorText"
        android:textColorLink="@color/colorText" />

    <RadioButton
        android:id="@+id/byViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="По просмотрам"
        android:textSize="18sp"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:paddingEnd="20dp"
        android:buttonTint="@color/colorText"
        android:textColorLink="@color/colorText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/clearSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Сбросить"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/AcceptSortButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Применить"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:background="@color/colorBackground"/>
    </LinearLayout>

</LinearLayout>